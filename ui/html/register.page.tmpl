{{template "base" .}}

{{define "title"}}Register{{end}}

{{define "main"}}
<article style="max-width: 600px; margin: auto;">
    <header>
        <h2>Create your Account</h2>
        <p>Join the Kazakh@Express community</p>
    </header>
    <form action='/register' method='POST'>
        <div>
            <label>Email</label>
            <input type='email' name='email' placeholder="example@mail.kz" required>
        </div>

        <div>
            <label>Password</label>
            <input type='password' name='password' minlength="8" required>
        </div>

        <div>
            <label>I want to join as a:</label>
            <select name="role">
                <option value="customer">Customer (I want to buy)</option>
                <option value="seller">Seller (I want to sell items)</option>
            </select>
        </div>

        <button type='submit' class="signup-btn" style="width: 100%; margin-top: 20px;">Register</button>
    </form>
    <footer style="margin-top: 20px; text-align: center;">
        <p>Already have an account? <a href="/login">Login here</a></p>
    </footer>
</article>
{{end}}