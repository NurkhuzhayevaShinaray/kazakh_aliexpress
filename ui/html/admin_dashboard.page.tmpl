{{template "base" .}}

{{define "title"}}Admin Dashboard{{end}}

{{define "main"}}
<div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>Admin Analytics & Control</h2>
        <a href="/admin/users" class="btn-primary" style="background: #333;">Manage Registered Users &rarr;</a>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 30px;">
        <article style="text-align: center; border-top: 4px solid #28a745;">
            <h5 style="color: #666; text-transform: uppercase; font-size: 0.8rem;">Total Marketplace Revenue</h5>
            <p style="font-size: 2.5rem; color: #28a745; margin: 10px 0; font-weight: bold;">{{.TotalRevenue}} ₸</p>
        </article>

        <article style="text-align: center; border-top: 4px solid #00afca;">
            <h5 style="color: #666; text-transform: uppercase; font-size: 0.8rem;">Total Orders Processed</h5>
            <p style="font-size: 2.5rem; color: #00afca; margin: 10px 0; font-weight: bold;">{{.TotalOrders}}</p>
        </article>
    </div>

    <article style="background: #f8f9fa; border: 1px solid #dee2e6; margin-bottom: 30px;">
        <header><strong style="color: #333;">Marketplace Inventory Management</strong></header>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 40px; padding-top: 10px;">

            <div>
                <p style="font-size: 0.9rem; margin-bottom: 10px;"><strong>Add New Product Category</strong></p>
                <form action="/category/add" method="POST" style="display: flex; gap: 10px;">
                    <input type="text" name="name" placeholder="e.g., Traditional Crafts" required style="flex-grow: 1;">
                    <button type="submit" style="white-space: nowrap; background: #333;">Create</button>
                </form>
            </div>

            <div style="font-size: 0.9rem; color: #555;">
                <p>Currently managing <strong>{{len .Products}}</strong> active product listings across all Kazakh regions.</p>
                <p>All deletions are permanent and will notify the respective seller.</p>
            </div>
        </div>
    </article>

    <h3>Global Product Moderation</h3>
    <table style="width: 100%; border-collapse: collapse; background: white;">
        <thead>
            <tr style="background-color: #333; color: white; text-align: left;">
                <th style="padding: 12px;">Product Name</th>
                <th style="padding: 12px;">City</th>
                <th style="padding: 12px;">Price</th>
                <th style="padding: 12px;">Stock</th>
                <th style="padding: 12px; text-align: right;">Moderation</th>
            </tr>
        </thead>
        <tbody>
            {{range .Products}}
            <tr style="border-bottom: 1px solid #eee;">
                <td style="padding: 12px;"><strong>{{.Name}}</strong></td>
                <td style="padding: 12px;">{{.City}}</td>
                <td style="padding: 12px;">{{.Price}} ₸</td>
                <td style="padding: 12px;">{{.Stock}}</td>
                <td style="padding: 12px; text-align: right;">
                    <form action="/product/delete" method="POST" style="display:inline;" onsubmit="return confirm('ADMIN ACTION: Are you sure you want to remove this product from the marketplace?');">
                        <input type="hidden" name="id" value="{{.ID.Hex}}">
                        <button type="submit" style="background-color: #e74c3c; color: white; border: none; padding: 6px 12px; border-radius: 4px; cursor: pointer; font-size: 0.8rem;">
                            Remove Listing
                        </button>
                    </form>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5" style="padding: 30px; text-align: center; color: #999;">No products currently listed on the platform.</td>
            </tr>
            {{end}}
        </tbody>
    </table>
</div>
{{end}}