{{template "base" .}}

{{define "main"}}
<div class="container">
    <h2>Seller Dashboard</h2>
    <p>Welcome to your sales panel.</p>

    <article>
        <h3>Your Inventory</h3>
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Stock</th>
                </tr>
            </thead>
            <tbody>
                {{range .Products}}
                <tr>
                    <td>{{.Name}}</td>
                    <td>{{.Price}} â‚¸</td>
                    <td>{{.Stock}}</td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="3">No products found. Add some!</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </article>
</div>
{{end}}