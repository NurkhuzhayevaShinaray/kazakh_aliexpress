{{template "base" .}}

{{define "main"}}
<div class="container">
    <header style="display: flex; justify-content: space-between; align-items: center;">
        <h2>Seller Dashboard</h2>
        <span class="badge">Seller Mode</span>
    </header>

    <article>
        <h3>Add New Product</h3>
        <form action="/product/create" method="POST">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                <div>
                    <label>Product Name</label>
                    <input type="text" name="name" required>
                </div>
                <div>
                    <label>Price (₸)</label>
                    <input type="number" name="price" required>
                </div>
                <div>
                    <label>City</label>
                    <input type="text" name="city" placeholder="e.g., Almaty" required>
                </div>
                <div>
                   <label>Category</label>
                   <select name="category_id" required>
                       <option value="" disabled selected>Select a category</option>
                       {{range .Categories}}
                           <option value="{{.ID.Hex}}">{{.Name}}</option>
                       {{end}}
                   </select>
                </div>
            </div>
            <div style="margin-top: 15px;">
                <label>Description</label>
                <textarea name="description" rows="3"></textarea>
            </div>
            <button type="submit" style="margin-top: 10px; background-color: #00afca;">Add Product to Marketplace</button>
        </form>
    </article>

    <article>
        <h3>Your Current Inventory</h3>
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>City</th>
                    <th style="text-align: right;">Action</th>
                </tr>
            </thead>
            <tbody>
                {{range .Products}}
                <tr>
                    <td><strong>{{.Name}}</strong></td>
                    <td>{{.Price}} ₸</td>
                    <td>{{.City}}</td>
                    <td>
                        <div style="display: flex; gap: 10px; justify-content: flex-end;">
                            <a href="/product/update?id={{.ID.Hex}}"
                               style="padding: 6px 12px; background-color: #fcd116; color: #333; text-decoration: none; border-radius: 4px; font-size: 0.8em; font-weight: bold;">
                                Edit
                            </a>

                            <form action="/product/delete" method="POST" style="margin:0;" onsubmit="return confirm('Delete this product?');">
                                <input type="hidden" name="id" value="{{.ID.Hex}}">
                                <button type="submit" style="background-color: #e74c3c; padding: 6px 12px; font-size: 0.8em; color: white; border: none; border-radius: 4px; cursor: pointer;">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="4" style="text-align: center; padding: 20px; color: #666;">You haven't listed any products yet.</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </article>

</div>
{{end}}