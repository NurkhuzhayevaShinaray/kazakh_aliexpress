{{template "base" .}}

{{define "title"}}Пайдаланушыларды басқару{{end}}

{{define "main"}}
<div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>Пайдаланушыларды басқару</h2>
        <span class="badge" style="background: #fcd116; color: #333; padding: 5px 12px; border-radius: 4px; font-weight: bold;">
            Админ рұқсаты
        </span>
    </div>

    <article>
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="background-color: #f8f9fa; border-bottom: 2px solid #dee2e6; text-align: left;">
                    <th style="padding: 12px;">Электрондық пошта</th>
                    <th style="padding: 12px;">Рөлі</th>
                    <th style="padding: 12px;">Пайдаланушы ID</th>
                    <th style="padding: 12px; text-align: right;">Әрекеттер</th>
                </tr>
            </thead>
            <tbody>
                {{range .Users}}
                <tr style="border-bottom: 1px solid #eee;">
                    <td style="padding: 12px;"><strong>{{.Email}}</strong></td>
                    <td style="padding: 12px;">
                        <span style="padding: 4px 8px; border-radius: 4px; font-size: 0.85em;
                            {{if eq .Role "admin"}} background: #ffeeba; color: #856404;
                            {{else if eq .Role "seller"}} background: #d1ecf1; color: #0c5460;
                            {{else}} background: #e2e3e5; color: #383d41; {{end}}">
                            {{if eq .Role "admin"}}Админ
                            {{else if eq .Role "seller"}}Сатушы
                            {{else}}Сатып алушы{{end}}
                        </span>
                    </td>
                    <td style="padding: 12px; font-family: monospace; font-size: 0.9em; color: #666;">{{.ID.Hex}}</td>
                    <td style="padding: 12px; text-align: right;">
                        {{if ne .Email $.UserName}}
                        <form action="/admin/users/delete" method="POST" style="display:inline;"
                              onsubmit="return confirm('Осы пайдаланушыны өшіруге сенімдісіз бе? Бұл әрекетті қайтару мүмкін емес.');">
                            <input type="hidden" name="id" value="{{.ID.Hex}}">
                            <button type="submit" style="background-color: #dc3545; color: white; border: none; padding: 6px 12px; border-radius: 4px; cursor: pointer;">
                                Өшіру
                            </button>
                        </form>
                        {{else}}
                        <span style="font-size: 0.8em; color: #999; font-style: italic;">(Сіз)</span>
                        {{end}}
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="4" style="padding: 20px; text-align: center; color: #666;">Жүйеде тіркелген пайдаланушылар жоқ.</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </article>

    <div style="margin-top: 20px;">
        <a href="/admin/dashboard" class="btn-secondary" style="text-decoration: none; color: #666;">&larr; Админ панеліне қайту</a>
    </div>
</div>
{{end}}