{{template "base" .}}

{{define "title"}}Login{{end}}

{{define "main"}}
<article style="max-width: 600px; margin: auto;">
    <header>
        <h2>Welcome Back</h2>
        <p>Log in to your Kazakh@Express account</p>
    </header>
    <form action='/login' method='POST'>
        <div>
            <label>Email</label>
            <input type='email' name='email' placeholder="example@mail.kz" required>
        </div>

        <div>
            <label>Password</label>
            <input type='password' name='password' required>
        </div>

        <button type='submit' class="signup-btn" style="width: 100%; margin-top: 20px;">Login</button>
    </form>
    <footer style="margin-top: 20px; text-align: center;">
        <p>Don't have an account? <a href="/register">Register here</a></p>
    </footer>
</article>
{{end}}